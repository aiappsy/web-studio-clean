generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  name         String?
  email        String?   @unique
  password     String?
  image        String?
  createdAt    DateTime  @default(now())

  // A user belongs to exactly one workspace
  workspaceId  String?
  workspace    Workspace? @relation(fields: [workspaceId], references: [id])

  accounts     Account[]
  sessions     Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  id_token          String?
  scope             String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Workspace {
  id         String     @id @default(cuid())
  name       String
  createdAt  DateTime   @default(now())

  users      User[]
  projects   Project[]
  templates  Template[]
  apiKeys    ApiKey[]
  assets     Asset[]
  auditLogs  AuditLog[]
}

model Project {
  id          String     @id @default(cuid())
  name        String
  workspaceId String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  publishedAt DateTime?
  schema      Json?

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  pages     Page[]
  versions  ProjectVersion[]
}

model Page {
  id        String      @id @default(cuid())
  projectId String
  name      String
  path      String
  tree      Json        // FULL PAGE JSON
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  project Project @relation(fields: [projectId], references: [id])
  versions PageVersion[]
}

model PageVersion {
  id        String   @id @default(cuid())
  pageId    String
  label     String?
  tree      Json
  createdAt DateTime @default(now())

  page Page @relation(fields: [pageId], references: [id])
}

model ProjectVersion {
  id         String   @id @default(cuid())
  projectId  String
  label      String?
  createdAt  DateTime @default(now())
  snapshot   Json

  project Project @relation(fields: [projectId], references: [id])
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  tree        Json
  workspaceId String

  workspace Workspace @relation(fields: [workspaceId], references: [id])
}

model Asset {
  id          String   @id @default(cuid())
  workspaceId String
  url         String
  name        String?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
}

model ApiKey {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  key         String   @unique
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
}

model AuditLog {
  id          String   @id @default(cuid())
  workspaceId String
  message     String
  meta        Json?
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
}
